@{
    ViewBag.Title = "Order Success";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h2>Thank you for your order!</h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Your order has been successfully processed.</p>
                    <p>Your Order ID is: <strong>@ViewBag.OrderId</strong></p>
                    <a href="@Url.Action("FetchProducts", "Home")" class="btn btn-primary btn-lg mt-3">Continue Shopping</a>
                    <form method="post" action="@Url.Action("Logout", "Home")" class="mt-3">
                        <button type="submit" class="btn btn-danger btn-lg">Log Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
