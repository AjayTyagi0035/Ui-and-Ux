<h1 class="heading" align="center">Products <span>List</span></h1>

@* <a href="@Url.Action("FetchProducts", "Home")" class="btn btn-primary mb-3">Fetch Products</a> *@

<table class="table table-striped">
    <tbody>
        <div class="container">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="card product-card">
                            <img src="@product.Thumbnail" alt="@product.Title" class="card-img-top product-thumbnail">
                            <div class="card-body">
                                <h5 class="product-title">@product.Title</h5>
                                <p class="product-description">@product.Description</p>
                                <p class="product-price">@product.Price.ToString("C")</p>
                                <div class="product-action">
                                    <form method="post" action="@Url.Action("AddToCart", "Home")">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-success">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        
    </tbody>
</table>
<section class="about">
    <h1 class="heading text-center"><span>About</span></h1>
    <div class="row">
        <div class="col">
            <div class="card">
                <img src="Images/main image.jpg" />
            </div>
        </div>
        <div class="col">
            <p>
                A supermarket is a self-service shop offering a wide variety of food, beverages and household products, organized into sections. This kind of store is larger and has a wider selection than earlier grocery stores, but is smaller and more limited in the range of merchandise than a hypermarket or big-box market. In everyday United States usage, however, "grocery store" mean "supermarket".
            </p>
            <div class="text-center">
                <button type="button" class="btn btn-outline-success mb-4">Read More</button>
            </div>
        </div>
    </div>
</section>

